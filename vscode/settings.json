{
    "window.zoomLevel": 1,
    // hide stupid open editors section in file explorer
    "explorer.openEditors.visible": 0,
    "editor.fontSize": 13,
    // https://github.com/Microsoft/vscode/issues/14999
    "css.validate": false,
    "stylelint.enable": true,
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "vscode-icons",

    // color theming
    "workbench.experimental.colorCustomizations":{
        "activeTabBackground": "#282c34",
        "activityBarBackground":"#282c34",
        "editorGroupBackground": "#282c34",
        "sideBarBackground": "#282c34"
    },
    // Flow
    // ----
    "flow.useNPMPackagedFlow": true,
    "javascript.validate.enable": false,
    "flow.showStatus": false,

    // vscode-icons
    // ------------
    "vsicons.presets.foldersAllDefaultIcon": true,

    // ------------
    // Vim settings
    // ------------

    // In normal mode, block shouldn't blink
    "vim.useSolidBlockCursor": true,
    "editor.cursorBlinking": "solid",
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        // misc editor vim-style style bindings
        {
            "before": ["<leader>", "e"],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility"
                }
            ]
        },
        // rebind to use normal vim-commentary bindings
        {
            "before": ["g", "c"],
            "after": ["g", "b"]
        },
        {
            "before": ["g", "C"],
            "after": ["g", "B"]
        },
        // fix j and k to work with line wraps
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        // clear search highlighting
        {
            "before":["leader", "/"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        // save and quit commands
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "x"],
            "after": [],
            "commands": [
                {
                    "command": ":x",
                    "args": []
                }
            ]
        }
    ]
}