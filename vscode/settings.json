{
    "window.zoomLevel": 1,
    // hide stupid open editors section in file explorer
    "explorer.openEditors.visible": 0,
    "editor.fontSize": 13,
    // https://github.com/Microsoft/vscode/issues/14999
    "css.validate": false,
    "stylelint.enable": true,
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "file-icons",

    // workbench theming
    // https://github.com/Binaryify/OneDark-Pro/blob/master/themes/OneDark-Pro.json
    "workbench.colorCustomizations":{
        "activityBar.background":"#282c34",
        "editorGroup.background": "#181A1F",
        "editorGroupHeader.tabsBackground": "#21252B",
        "sideBar.background": "#21252b",
        "titleBar.activeBackground": "#282c34",
        "tab.inactiveBackground": "#21252B",
        "tab.activeBackground": "#282c34",
        "tab.border": "#181A1F",
        "list.activeSelectionBackground": "#2c313a"
    },
    // Flow
    // ----
    "flow.useNPMPackagedFlow": true,
    "javascript.validate.enable": false,
    "flow.showStatus": false,

    // vscode-icons
    // ------------
    "vsicons.presets.foldersAllDefaultIcon": true,

    // ------------
    // Vim settings
    // ------------

    // In normal mode, block shouldn't blink
    "vim.useSolidBlockCursor": true,
    "editor.cursorBlinking": "solid",
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        // misc editor vim-style style bindings
        {
            "before": ["<leader>", "e"],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility"
                }
            ]
        },
        {
            "before": ["<leader>", "f"],
            "commands": [
                {
                    "command": "workbench.action.quickOpen"
                }
            ]
        },
        // rebind to use normal vim-commentary bindings
        {
            "before": ["g", "c"],
            "after": ["g", "b"]
        },
        {
            "before": ["g", "C"],
            "after": ["g", "B"]
        },
        // fix j and k to work with line wraps
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        // clear search highlighting
        {
            "before":["leader", "/"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        // save and quit commands
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "x"],
            "after": [],
            "commands": [
                {
                    "command": ":x",
                    "args": []
                }
            ]
        }
    ]
}